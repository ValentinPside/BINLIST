<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments.SearchFragment">


    <EditText
        android:id="@+id/editTextNumberSigned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bin"
        android:textAlignment="center"
        android:hint="@string/hint_bin"/>

    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/country_placeholder"
        android:theme="@style/gray_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <TextView
        android:id="@+id/countryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/denmark_placeholder"
        app:layout_constraintEnd_toEndOf="@+id/country"
        app:layout_constraintStart_toStartOf="@+id/country"
        app:layout_constraintTop_toBottomOf="@+id/country"
        android:theme="@style/bold_style"/>

    <TextView
        android:id="@+id/coordinatyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/latitude_56_longitude_10_placeholder"
        app:layout_constraintEnd_toEndOf="@+id/countryName"
        app:layout_constraintStart_toStartOf="@+id/countryName"
        app:layout_constraintTop_toBottomOf="@+id/countryName"
        android:theme="@style/bold_style"/>

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/scheme_network_placeholder"
        app:layout_constraintEnd_toEndOf="@+id/coordinatyName"
        app:layout_constraintStart_toStartOf="@+id/coordinatyName"
        app:layout_constraintTop_toBottomOf="@+id/coordinatyName"
        android:theme="@style/gray_style"/>

    <TextView
        android:id="@+id/typeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/visa_placeholder"
        app:layout_constraintEnd_toEndOf="@+id/type"
        app:layout_constraintStart_toStartOf="@+id/type"
        app:layout_constraintTop_toBottomOf="@+id/type"
        android:theme="@style/bold_style"/>

    <TextView
        android:id="@+id/bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/bank_placeholder"
        app:layout_constraintEnd_toEndOf="@+id/typeName"
        app:layout_constraintStart_toStartOf="@+id/typeName"
        app:layout_constraintTop_toBottomOf="@+id/typeName"
        android:theme="@style/gray_style"/>

    <TextView
        android:id="@+id/nameAndCityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/jyske_bank_hj_rring_placeholder"
        app:layout_constraintEnd_toEndOf="@+id/bank"
        app:layout_constraintStart_toStartOf="@+id/bank"
        app:layout_constraintTop_toBottomOf="@+id/bank"
        android:theme="@style/bold_style"/>

    <TextView
        android:id="@+id/urlName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/www_jyskebank_dk_placeholder"
        android:textColor="@color/Blue_yp"
        android:theme="@style/bold_style"
        app:layout_constraintEnd_toEndOf="@+id/nameAndCityName"
        app:layout_constraintStart_toStartOf="@+id/nameAndCityName"
        app:layout_constraintTop_toBottomOf="@+id/nameAndCityName" />

    <TextView
        android:id="@+id/phoneName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/number_placeholder"
        android:theme="@style/bold_style"
        app:layout_constraintEnd_toEndOf="@+id/urlName"
        app:layout_constraintStart_toStartOf="@+id/urlName"
        app:layout_constraintTop_toBottomOf="@+id/urlName" />

    <TextView
        android:id="@+id/bin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/iin_bin_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/gray_style"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/lookup_placeholder"
        app:layout_constraintEnd_toEndOf="@+id/editTextNumberSigned"
        app:layout_constraintStart_toStartOf="@+id/editTextNumberSigned"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberSigned" />
</androidx.constraintlayout.widget.ConstraintLayout>